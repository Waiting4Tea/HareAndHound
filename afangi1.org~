#+begin_src java :classname leikreglur :results output
  class leikreglur {
      public static void main(String[] args) {
	  rules();
      }


      /**
       ,* ímyndum að við erum með borðið
       ,* svo tökum peð og færa peðið
       ,*/
      private static void rules() {
	  for(int i=0; i<3; i++) {
	      for(int j=0; j<5; j++) {
		  System.out.print("i ");
	      }
	      System.out.println();
	  }
      }

      private static winning() {
	
      }
  }
#+end_src

